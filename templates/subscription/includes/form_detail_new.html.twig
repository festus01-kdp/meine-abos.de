<div class="row">
    <div class="col-md-4">
        {{ form_label(formular.name) }}
        {{ form_widget(formular.name) }}
    </div>
    <div class="col-md-2">
        {{ form_label(formular.costs) }}
        {{ form_widget(formular.costs) }}
    </div>
    <div class="col-md-2">
        {{ form_label(formular.startDate) }}
        {{ form_widget(formular.startDate) }}
    </div>
    <div class="col-md-2">
        {{ form_label(formular.cancelDate) }}
        {{ form_widget(formular.cancelDate) }}
    </div>
    <div class="col-md-2">
        {{ form_label(formular.period) }}
        {{ form_widget(formular.period) }}
    </div>
    <div class="col-md-6">
        {{ form_label(formular.paymentType) }}
        {{ form_widget(formular.paymentType) }}
    </div>
    <div class="col-md-6">
        {{ form_label(formular.category) }}
        {{ form_widget(formular.category) }}
    </div>
    <div class="row mt-4">
        <div class="col">
            {{ form_row(formular.save, {'attr':{'class':'btn-primary'}}) }}
        </div>
        <div class="col">
            {{ form_row(formular.cancel, {'attr':{'class':'btn-primary'}}) }}
        </div>
    </div>
</div>